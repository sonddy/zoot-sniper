{
  "name": "zoot-auto-sniper-bot",
  "version": "1.0.0",
  "description": "Zoot Auto Sniper Bot - The fastest pump.fun trading bot",
  "main": "main.js",
  "author": "Zoot",
  "license": "UNLICENSED",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:all": "electron-builder --win --mac"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.6.2",
    "bs58": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.zoot.sniper",
    "productName": "Zoot Auto Sniper Bot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "win": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "signAndEditExecutable": false,
      "artifactName": "ZootSniperBot-${version}-Windows-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.finance",
      "identity": null,
      "artifactName": "ZootSniperBot-${version}-Mac-${arch}.${ext}",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "sign": false
    },
    "portable": {
      "artifactName": "ZootSniperBot-${version}-Windows-Portable.exe"
    }
  }
}
